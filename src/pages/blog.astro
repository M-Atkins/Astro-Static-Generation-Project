---
import Layout from '../layouts/Layout.astro';

const posts = await Astro.glob('../posts/*.md')
---

<html>
    <Layout title='Blog'>
        <div class="main">
            <h1>Blog</h1>


        {posts.map(post => (
            <div style="border-bottom: 1px dotted white;">

            <a href={post.frontmatter.slug}><p>{post.frontmatter.title}</p></a>
            <p>{post.frontmatter.excerpt}</p>
            <p>{post.frontmatter.date}</p>
            <p>{post.frontmatter.tags}</p>
        </div>
        ))}
                </div>
    </Layout>
</html>

<style>
    .main {
        padding: 50px
    }
</style>
