---
interface Props {
	title: string;
}

import Navbar from '../components/navbar.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar class="center" />
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
        font-family: "UniFont";
        src: url("src/fonts/unifont-15.1.04.otf");

      }
	  .center {
        margin:auto;
        width: 50%;
        text-align: center;
    }
	  html {
		background-color: navy;
		color: white;
	  }
	  * {
		font-family: UniFont;

	  }
</style>
